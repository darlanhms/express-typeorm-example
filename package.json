{
    "name": "simple-express-typescript",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "https://github.com/darlanhms/simple-express-typescript.git",
    "author": "Darlan H. <darlanhermessjb@hotmail.com>",
    "license": "MIT",
    "scripts": {
        "migration:run": "ts-node -r dotenv/config ./node_modules/typeorm/cli.js migration:run",
        "migration:revert": "ts-node -r dotenv/config ./node_modules/typeorm/cli.js migration:revert",
        "dev": "ts-node-dev -r dotenv/config --respawn --transpile-only --ignore-watch node_modules --no-notify --poll src/server.ts",
        "start": "cross-env NODE_ENV=production node dist/server.js",
        "build": "tsc"
    },
    "dependencies": {
        "cross-env": "^7.0.3",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "pg": "^8.6.0",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.2.34",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/jest": "^26.0.24",
        "@types/node": "^16.3.1",
        "@types/uuid": "^8.3.1",
        "@typescript-eslint/eslint-plugin": "^3.10.0",
        "@typescript-eslint/parser": "^3.10.0",
        "eslint": "6.8.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-import-resolver-typescript": "^2.2.1",
        "eslint-plugin-import": "^2.21.2",
        "eslint-plugin-prettier": "^3.1.4",
        "git-commit-msg-linter": "^3.2.6",
        "jest": "^27.0.6",
        "prettier": "^2.1.0",
        "ts-jest": "^27.0.3",
        "ts-node": "^10.1.0",
        "ts-node-dev": "^1.1.8",
        "typescript": "4.2.3"
    }
}
